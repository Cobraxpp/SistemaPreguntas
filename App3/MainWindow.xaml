<Window x:Class="App3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <ProgressBar Name="QuestionProgressBar" Height="20" Margin="0,0,0,20" />
            <TextBlock Name="QuestionTextBlock" FontSize="24" TextAlignment="Center" Margin="0,0,0,20">
            ¿Cuál es el río más largo del mundo?
            </TextBlock>
            <TextBox Name="AnswerTextBox" FontSize="18" Margin="0,0,0,20" KeyDown="AnswerTextBox_KeyDown" />
            <Button Name="SubmitButton" Content="Submit" FontSize="18" Click="SubmitButton_Click" Margin="0,0,0,20" />
            <TextBlock Name="TimerTextBlock" FontSize="18" TextAlignment="Center" Margin="0,0,0,20">
                Time Left: 10s
            </TextBlock>
            <TextBlock Name="FeedbackTextBlock" FontSize="18" TextAlignment="Center" Margin="0,0,0,20" />
        </StackPanel>
    </Grid>
</Window>